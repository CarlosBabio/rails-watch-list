<div class="container">
  <h1 id="genre-heading"><%= @list.name %></h1>
  <p><%= link_to "Delete list", list_path(@list), method: :delete, class:"btn btn-brown" %></p>
  <%= link_to "New Bookmark", new_list_bookmark_path(params[:id]), class:"btn btn-brown" %>
  <div class="row row-cols-1 row-cols-md-2">
    <% @list.bookmarks.each do |bookmark| %>
    <div class="col d-flex justify-content-center" style="padding-bottom: 15px">
      <div class="card mb-3" style="max-width: 700px;">
        <div class="row g-0">
            <div class="col-md-4">
                <%= image_tag bookmark.movie.poster_url, alt: "", width: :cover, class:"movie-poster img-fluid" %>
            </div>
            <div class="col-md-8">
              <div class="card-bookmark-content">
                <h4 class="pb-1"><%= bookmark.movie.title %></h4 class="pb-1">
                <p><%= bookmark.movie.overview.first(100) + "....." %></p>
                <p class="card-comment fst-italic">"<%= bookmark.comment %>"</p>
                <div class="d-flex justify-content-between">
                  <p><%= bookmark.movie.rating %>/10</p>
                  <%= link_to raw("<i class='fa-solid fa-x'></i>"), bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?"}, class:"btn btn-brown text-end" %>
                </div>
              </div>
            </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
