<div class="container">
  <h1><%= @list.name %></h1>
  <%= link_to "+ New Bookmark", new_list_bookmark_path(params[:id]) %>
  <ul>
    <% @list.bookmarks.each do |bookmark| %>
      <li>
        <p><%= bookmark.movie.title %></p>
        <p><%= bookmark.movie.overview %></p>
        <%= image_tag bookmark.movie.poster_url, alt: "", width: 200 %>
        <p><%= bookmark.movie.rating %></p>
        <%= link_to "Delete bookmark", bookmark_path(bookmark), method: :delete %>
      </li>
    <% end %>
  </ul>
  <p><%= link_to "Delete list", list_path(@list), method: :delete %></p>
  <%= link_to "Back to lists", lists_path %>
</div>
